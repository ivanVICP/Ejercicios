public class Main {

    public static void main(String[] args) {
        suma(10, 12, 13);
        Coche miCoche = new Coche();
        miCoche.increaseP();
        System.out.println(miCoche.puertas);
    }

    public static int suma(int a, int b, int c) {
        int suma;
        suma = a + b + c;
        return suma;
    }
}

class Coche {
    public int puertas = 0;

    public void increaseP() {
        this.puertas++;
    }
}

